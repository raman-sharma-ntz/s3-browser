<div class="flex h-screen bg-gray-900 text-white">
  <div class="w-64 bg-gray-800 p-3 overflow-y-auto border-r border-gray-700">
    <h2 class="text-lg font-semibold mb-4">Bucket: <%= bucket %></h2>
    <div id="tree" class="space-y-1"></div>
  </div>

  <div class="flex-1 flex flex-col">
    <div
      class="flex items-center justify-between bg-gray-850 p-3 border-b border-gray-700"
    >
      <nav
        id="breadcrumb"
        class="flex items-center text-sm text-gray-300 space-x-2"
      ></nav>
      <div class="flex gap-2">
        <button
          id="downloadAllBtn"
          class="bg-green-600 hover:bg-green-700 px-3 py-1 rounded"
        >
          ⬇️ Download All
        </button>
        <button
          id="disconnectBtn"
          class="bg-red-600 hover:bg-red-700 px-3 py-1 rounded"
        >
          Disconnect
        </button>
      </div>
    </div>

    <div id="content" class="flex-1 overflow-y-auto p-4">
      <table class="w-full text-left border-collapse">
        <thead class="border-b border-gray-700 text-gray-400">
          <tr>
            <th class="py-2 px-3">Name</th>
            <th class="py-2 px-3 w-32">Type</th>
            <th class="py-2 px-3 w-32">Size</th>
          </tr>
        </thead>
        <tbody id="content-list"></tbody>
      </table>
    </div>
  </div>

  <script src="/js/explorer.js" defer></script>
</div>
